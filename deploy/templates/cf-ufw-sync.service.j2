[Unit]
Description=Refresh UFW allowlist with Cloudflare IP ranges
After=network-online.target
Wants=network-online.target
ConditionPathExists={{ firewall_script_path }}

[Service]
Type=oneshot
ExecStart=/bin/bash {{ firewall_script_path }}
User=root
Group=root
SyslogIdentifier=cf-ufw-sync
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
