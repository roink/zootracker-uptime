SECRET_KEY=replace-with-a-random-hex-string
JWT_SECRET=replace-with-a-random-hex-string
TOKEN_PEPPER=replace-with-a-strong-random-string
ACCESS_TOKEN_TTL=900
REFRESH_IDLE_TTL=1800
REFRESH_ABS_TTL=1209600
# Cookie settings
# For local development over HTTP set COOKIE_SECURE=false so browsers accept the refresh cookie.
COOKIE_SAMESITE=Lax
COOKIE_SECURE=true
# COOKIE_DOMAIN=app.example.com
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
APP_ENV=development
APP_BASE_URL=http://localhost:5173
SITE_BASE_URL=http://localhost:5173
SITE_LANGUAGES=en,de
SMTP_HOST=smtppro.zoho.com
SMTP_PORT=465
SMTP_SSL=true
SMTP_USER=username
SMTP_PASSWORD=password
SMTP_FROM=contact@zootracker.app
CONTACT_EMAIL=contact@zootracker.app
CONTACT_RATE_LIMIT=5
VITE_MAP_STYLE_URL=https://tiles.openfreemap.org/styles/liberty
ALLOWED_ORIGINS=http://localhost:5173
LOG_LEVEL=INFO
LOG_JSON=true
# HTTP security headers (override as needed for local development)
STRICT_TRANSPORT_SECURITY=max-age=63072000; includeSubDomains; preload
CONTENT_SECURITY_POLICY=default-src 'self'; frame-ancestors 'none'; base-uri 'self'; object-src 'none'
# Example overrides for running the API on http://127.0.0.1:8000 while testing the frontend on http://localhost:5173:
# STRICT_TRANSPORT_SECURITY=
# CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data:; connect-src 'self' http://localhost:5173
# LOG_FILE_ANON=/var/log/zoo-tracker/anon/app.log
# LOG_FILE_RAW=/var/log/zoo-tracker/raw/app.log
# LOG_FILE=/var/log/zoo-tracker/app.log
ACCESS_LOG_SAMPLE=1.0
SLOW_REQUEST_MS=500
LOG_IP_MODE=anonymized
